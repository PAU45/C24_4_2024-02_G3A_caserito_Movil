<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F8F8F8" android:padding="16dp" tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/caserito"
                android:contentDescription="@string/logo_description"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicia sesión"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#008000" />
            </LinearLayout>

        </LinearLayout>

        <!-- Main Search Section -->

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar mi restaurante"
            android:textColor="#FFFFFF"
            android:backgroundTint="#008000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descubre el mejor Restaurante de tu zona"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿Qué estás buscando?"
                android:background="#FFFFFF"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Búsqueda"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Selected for You Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionados para ti"
            android:textSize="18sp"
            android:textColor="#008000"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- Popular Restaurants Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurantes populares"
            android:textSize="18sp"
            android:textColor="#008000"
            android:layout_marginTop="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- About Caserito Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acerca de Caserito"
            android:textSize="18sp"
            android:textColor="#008000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
            android:textColor="#333333" />

        <!-- Join Caserito Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÚNETE A CASERITO"
            android:textSize="18sp"
            android:textColor="#008000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COME, AHORRA Y DISFRUTA"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button 1"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008000"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button 2"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008000"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="#F8F8F8"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Footer Content"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="16dp" />

            <!-- Legal Links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Quiénes somos?"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información de contacto"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Tienes restaurante?"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preguntas frecuentes"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trabaja con nosotros"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Términos y Condiciones (Usuario)"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Términos y Condiciones (Negocios)"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Política de privacidad"
                        android:textSize="14sp"
                        android:textColor="#0000FF"
                        android:paddingVertical="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Social Media Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/facebook"
                    android:contentDescription="facebook_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/instagram"
                    android:contentDescription="instagram_icon"
                    android:layout_margin="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>